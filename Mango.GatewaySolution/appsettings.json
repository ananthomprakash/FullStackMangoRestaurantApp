{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //"ProductAPI": "https://localhost:7168"

  "Routes": [
    {
      //Getallproducts
      //where the request should be forwarded to(Services)
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7168
        }
      ],
      //where you will recieve the request
      "UpstreamPathTemplate": "/api/products",
      "UpstreamHttpMethod": [ "GET" ]

    },
    {
      //GetProductsbyid
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7168
        }
      ],

      "UpstreamPathTemplate": "/api/products/{id}",
      "UpstreamHttpMethod": [ "GET" ]

    },
    {
      //CreateUpdateProduct
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7168
        }
      ],

      "UpstreamPathTemplate": "/api/products",
      "UpstreamHttpMethod": [ "POST", "PUT" ]

    },
    {
      //DeleteProduct
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7168
        }
      ],

      "UpstreamPathTemplate": "/api/products/{id}",
      "UpstreamHttpMethod": [ "DELETE" ]

    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5050"
  }
  
}
