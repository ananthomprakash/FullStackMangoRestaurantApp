@model IEnumerable<Mango.web.Models.ProductDto>
<br></br>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info">Create New Product</a>
        </div>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productid="@item.ProductId">
                            Edit
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productid="@item.ProductId">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>